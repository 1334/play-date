{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "start": "json-server --watch ./db.json",
    "lint": "eslint \"**/*.{js,jsx}\"",
    "format:check": "prettier --list-different \"**/*.{js, jsx, css, json}\"",
    "recreateDb": "sequelize db:drop && sequelize db:create && sequelize db:migrate && sequelize db:seed:all",
