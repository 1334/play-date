  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "json-server": "^0.14.0",
    "pg": "^7.6.1",
    "pg-promise": "^8.5.2",
    "sequelize": "^4.41.1",
    "sequelize-cli": "^5.3.0"
  },
  "devDependencies": {
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.9.0",
    "husky": "^1.1.4",
    "jest": "^23.6.0",
    "prettier": "^1.15.2",
    "supertest": "^3.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./server/node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*test.js"
    ]
  }
